    <style name="DarkTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/dark_colorPrimary</item>
        <item name="colorPrimary">@color/dark_colorSecondary</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DarkTheme.MaterialAlertDialog.TitleTextStyle</item>
    </style>

