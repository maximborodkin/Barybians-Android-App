        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/dark_colorPrimaryText</item>
        <item name="colorSecondary">@color/dark_colorSecondary</item>
        <item name="colorAccent">@color/dark_colorSecondary</item>
        <item name="android:textColorSecondary">@color/dark_colorSecondaryText</item>
        <item name="android:textColorTertiary">@color/dark_colorTertiaryText</item>
        <item name="android:windowBackground">@color/dark_colorPrimaryLight</item>
        <item name="android:colorBackground">@color/dark_colorPrimaryLight</item>
        <item name="alertDialogTheme">@style/DarkTheme.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/DarkTheme.MaterialAlertDialog</item>
        <item name="materialCardViewStyle">@style/DarkTheme.MaterialCardView</item>
        <item name="profileHeaderStyle">@style/DarkTheme.TopRoundedCard</item>
        <item name="accentTextStyle">@style/DarkTheme.AccentText</item>
        <item name="bottomNavigationStyle">@style/DarkTheme.BottomNavigation</item>
        <item name="recyclerViewBackground">@color/dark_recyclerBackgroundColor</item>
        <item name="postTitleLayoutStyle">@style/WhiteEditTextLayout</item>
