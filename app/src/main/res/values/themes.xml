    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/light_colorPrimaryText</item>
        <item name="colorSecondary">@color/light_colorSecondary</item>
        <item name="colorAccent">@color/light_colorSecondary</item>
        <item name="android:textColorSecondary">@color/light_colorSecondaryText</item>
        <item name="bottomSheetDialogTheme">@style/LightTheme.BottomSheet</item>
        <item name="android:textColorTertiary">@color/light_colorTertiaryText</item>
        <item name="materialAlertDialogTheme">@style/LightTheme.MaterialAlertDialog</item>
        <item name="profileHeaderStyle">@style/LightTheme.TopRoundedCard</item>
        <item name="accentTextStyle">@style/LightTheme.AccentText</item>
        <item name="recyclerViewBackground">@color/light_recyclerBackgroundColor</item>
        <item name="postTitleLayoutStyle">@style/LightTheme.PostTitleLayout</item>
        <item name="postTitleInputStyle">@null</item>
        <item name="postTextLayoutStyle">@style/LightTheme.PostTextLayout</item>
        <item name="postTextInputStyle">@null</item>
        <item name="textButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="commentInputStyle">@style/LightTheme.CommentEditText</item>
        <item name="cardBackground">@color/white</item>
        <item name="incomingMessageBackgroundColor">@color/light_incoming_message_background</item>
        <item name="outgoingMessageBackgroundColor">@color/light_outgoing_message_background</item>


    </style>

    <style name="LightTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorSecondary">@color/light_colorSecondary</item>
    </style>

<!--  Dark Theme  -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
