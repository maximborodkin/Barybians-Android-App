<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Global  -->
    <style name="Widget.Material3.CardView.Elevated.Appearance">
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">?colorSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.MyApp.MaterialCardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.ProfileHeaderRounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.ProfileHeaderRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
</resources>
