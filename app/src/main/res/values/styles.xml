<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  Global  -->
    <style name="Widget.Material3.CardView.Elevated.Appearance">
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="ProfileHeaderRoundedCard" parent="Widget.Material3.CardView.Elevated.Appearance">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.ProfileHeaderRounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.ProfileHeaderRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
