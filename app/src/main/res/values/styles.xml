<resources xmlns:android="http://schemas.android.com/apk/res/android">

<!--  Global  -->
    <style name="TopRoundedShapeAppearanceOverlay" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">18dp</item>
        <item name="cornerSizeTopLeft">18dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetShape" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/TopRoundedShapeAppearanceOverlay</item>
    </style>

<!--  Auth Theme  -->
    <style name="WhiteEditTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
        <item name="endIconTint">@color/white_edittext_selector</item>
        <item name="boxStrokeColor">@color/white_edittext_selector</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white_edittext_selector</item>
    </style>

    <style name="WhiteEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@color/white_transparent_60</item>
        <item name="selectableItemBackground">@color/white</item>
    </style>
    
    <style name="WhiteButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

<!--  Light Theme  -->
    <style name="LightTheme.TopRoundedCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/TopRoundedShapeAppearanceOverlay</item>
    </style>

    <style name="LightTheme.BottomSheet" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetShape</item>
    </style>

    <style name="LightTheme.AccentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_colorPrimaryText</item>
    </style>

    <style name="LightTheme.CommentEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LightTheme.PostTitleLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="background">@color/transparent</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="LightTheme.PostTextLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">true</item>
    </style>

<!--  Dark Theme  -->
    <style name="DarkTheme.TopRoundedCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/TopRoundedShapeAppearanceOverlay</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme.AccentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/dark_colorPrimaryText</item>
    </style>

    <style name="DarkTheme.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark_colorPrimaryText</item>
        <item name="background">@color/transparent</item>
    </style>

    <style name="DarkTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="textColorAlertDialogListItem">@color/dark_colorPrimaryText</item>
        <item name="android:textColor">@color/dark_colorPrimaryText</item>
        <item name="colorControlNormal">@color/dark_colorTertiaryText</item>
        <item name="colorAccent">@color/dark_colorSecondary</item>
    </style>

    <style name="DarkTheme.MaterialAlertDialog.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/dark_colorPrimaryText</item>
    </style>

    <style name="DarkTheme.MaterialCardView" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="DarkTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/dark_colorPrimaryLight</item>
    </style>

    <style name="DarkTheme.BottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetShape</item>
<!--        <item name="android:windowAnimationStyle">@style/Animation.MaterialComponents.BottomSheetDialog</item>-->
    </style>

    <style name="DarkTheme.CommentEditText" parent="LightTheme.CommentEditText">
        <item name="colorControlNormal">@color/dark_colorSecondary</item>
        <item name="colorControlActivated">@color/dark_colorSecondary</item>
        <item name="colorControlHighlight">@color/dark_colorSecondary</item>
        <item name="android:textColor">@color/dark_colorPrimaryText</item>
        <item name="android:textColorHint">@color/dark_colorTertiaryText</item>
    </style>

</resources>
